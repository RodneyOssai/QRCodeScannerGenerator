<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.figurehowto.qrcodescannergenerator">

    <uses-feature android:name="android.hardware.camera2" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1234502077623540~9970501705"/>
        <activity android:name=".ScanHistoryActivity"></activity>
        <activity android:name=".ScreenSlidePagerActivity" />
        <activity android:name=".GenerateTextQR" />
        <activity android:name=".GenerateWiFiQr" />
        <activity android:name=".GenerateUrlQR" />
        <activity android:name=".GenerateSmsQR" />
        <activity android:name=".GenerateEmailQR" />
        <activity android:name=".OutputGeneratedQR" />
        <activity android:name=".GenerateContactQR" />
        <activity android:name=".WifiSettingActivity" />
        <activity android:name=".EmailActivity" />
        <activity android:name=".SmsActivity" />
        <activity android:name=".WebLinkActivity" />
        <activity android:name=".ContactCardActivity" />
        <activity android:name=".ResultActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>